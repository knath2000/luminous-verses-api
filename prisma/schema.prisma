generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
  output          = "./generated/client"
  binaryTargets   = ["native", "rhel-openssl-3.0.x", "darwin-arm64"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model EnYusufali {
  index Int    @id
  sura  Int
  aya   Int
  text  String
  
  @@map("en_yusufali")
}

model QuranSajda {
  sajdaId     Int @id @map("sajda_id") @default(autoincrement())
  surahNumber Int @map("surah_number")
  ayahNumber  Int @map("ayah_number")
  type        String?
  
  @@map("quran_sajdas")
}


model QuranSurah {
  number             Int    @id
  arabicName         String @map("arabic_name")
  transliteration    String
  englishName        String @map("english_name")
  ayas               Int
  revelationType     String @map("revelation_type")
  chronologicalOrder Int    @map("chronological_order")
  rukus              Int
  startIndex         Int? @map("start_index") // Add this line
  
  @@map("quran_surahs")
}

model QuranText {
  id   Int    @id @default(autoincrement())
  sura Int
  aya  Int
  text String
  
  @@map("quran_text")
}

model UserBookmark {
  id          String   @id @default(cuid())
  userId      String
  surahId     Int
  verseNumber Int
  verseText   String
  surahName   String
  translation String
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, surahId, verseNumber])
  @@map("user_bookmarks")
}
